{
	"name": "freeuron",
		"description": "A CLI app to capture and categorize your thoughts without breaking your workflow.",
	"author": {
		"name": "Filippo Dembech",
		"email": "filippodembechwork@gmail.com",
		"url": "https://filippo-dembech.github.io/portfolio/"
	},
	"keywords": [
	  "cli",
	  "terminal",
	  "ink",
	  "react",
	  "typescript",
	  "productivity",
	  "notes",
	  "todo",
	  "thoughts",
	  "workflow",
	  "brain-dump",
	  "organize",
	  "freeuron"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Filippo-Dembech/Freeuron"
	},
	"version": "0.0.7",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist",
		"static"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"ink-select-input": "^6.2.0",
		"ink-tab": "^5.1.0",
		"ink-task-list": "^2.0.0",
		"ink-text-input": "^6.0.0",
		"lowdb": "^7.0.1",
		"meow": "^11.0.0",
		"react": "^18.2.0",
		"uuid": "^11.1.0",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/lowdb": "^1.0.15",
		"@types/node": "^24.0.8",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off",
			"unicorn/expiring-todo-comments": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
